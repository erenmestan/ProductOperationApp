@using ProductOperation.Core.DTOs

@{
    ViewData["Title"] = "Update";
}
@model StandartStoppingDto
<h1>Yeni Standart Duruşları Düzenle</h1>
<div class="row">
    <div class=col-md-6>
        <form asp-action="Update" method="post" asp-controller="StandartStopping">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="StartTime">Başlangıç</label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndTime">Bitiş</label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StoppingReason">Duruş Nedeni</label>
                <input asp-for="StoppingReason" class="form-control" />
                <span asp-validation-for="StoppingReason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn-primary" />
            </div>
        </form>
    </div>
</div>
